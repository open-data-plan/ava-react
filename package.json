{
  "name": "@opd/ava",
  "version": "0.0.1-alpha.2",
  "description": "React component wrapper for AVA",
  "keywords": [
    "component",
    "chart",
    "ava",
    "react"
  ],
  "author": "kagawagao <kingsongao1221@gmail.com> (https://kingsongao.com/)",
  "homepage": "https://github.com/open-data-plan/ava-react",
  "license": "MIT",
  "main": "lib/index.js",
  "module": "es/index.js",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib",
    "es",
    "style",
    "*.d.ts"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/open-data-plan/ava-react.git"
  },
  "scripts": {
    "lint": "eslint . --ext=.ts,.tsx",
    "lint:fix": "eslint . --ext=.ts,.tsx --fix",
    "test": "jest",
    "prebuild": "npm test",
    "build": "npm run build:es & npm run build:commonjs & npm run build:types",
    "build:es": "babel src -d es --extensions .ts,.tsx",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src -d lib --extensions .ts,.tsx",
    "build:types": "tsc",
    "preversion": "npm run build"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@opd/babel-preset-component": "^1.1.0",
    "@opd/eslint-config-pangu": "^1.1.0",
    "@opd/jest-preset-pangu": "^1.1.0",
    "@opd/prettier-config-pangu": "^1.1.0",
    "@types/jest": "^25.2.1",
    "@types/react-dom": "^16.9.6",
    "cross-env": "^7.0.2",
    "dumi": "^1.0.18",
    "husky": "^4.2.5",
    "jest": "^25.4.0",
    "jest-canvas-mock": "^2.2.0",
    "lint-staged": "^10.1.6",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-test-renderer": "^16.13.1",
    "typescript": "^3.8.3"
  },
  "prettier": "@opd/prettier-config-pangu",
  "dependencies": {
    "@antv/chart-advisor": "^0.1.3-alpha.26"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{css,less}": [
      "stylelint --fix"
    ],
    "*.{json,md}": [
      "prettier -c --write"
    ]
  }
}
